{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "lib": ["es2017"],
    "paths": {
      "net": [
        "../../node_modules/@types/node",
        "node_modules/@types/node"
      ]
    },
    "rootDir": ".",
    "typeRoots": [
      "./typings",
      "../../**/node_modules/@types/mocha",
      "../../**/node_modules/@types/assert"
    ]
  },
  "include": [
    "./**/*.ts",
    "./typings/**/*.d.ts"
  ]
}
