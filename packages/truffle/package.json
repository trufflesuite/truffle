{
  "name": "truffle",
  "description": "Truffle - Simple development framework for Ethereum",
  "license": "MIT",
  "author": "consensys.net",
  "homepage": "https://github.com/trufflesuite/truffle#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/trufflesuite/truffle.git",
    "directory": "packages/truffle"
  },
  "bugs": {
    "url": "https://github.com/trufflesuite/truffle/issues"
  },
  "version": "5.6.6",
  "main": "./dist/library.bundled.js",
  "bin": {
    "truffle": "./dist/cli.bundled.js"
  },
  "scripts": {
    "analyze": "./scripts/analyze.sh",
    "build": "yarn build:cli",
    "build:cli": "cross-env NODE_OPTIONS=\"--max-old-space-size=8192\" webpack --config ./webpack.config.ts",
    "postinstall": "node ./scripts/postinstall.js",
    "prepare": "yarn build",
    "publish:byoc": "node ./scripts/prereleaseVersion.js byoc-safe byoc",
    "publish:external-compiler": "node ./scripts/prereleaseVersion.js external-compiler external-compiler",
    "publish:next": "node ./scripts/prereleaseVersion.js next next",
    "publish:user-level-mnemonic": "node ./scripts/prereleaseVersion.js user-level-mnemonic user-level-mnemonic",
    "test": "./scripts/test.sh",
    "test:raw": "cross-env NO_BUILD=true mocha"
  },
  "optionalDependencies": {
    "@truffle/db": "^2.0.6"
  },
  "dependencies": {
    "@truffle/db-loader": "^0.2.6",
    "@truffle/debugger": "^11.0.17",
    "@truffle/box": "^2.1.64",
    "@truffle/config": "^1.3.44",
    "@truffle/contract": "^4.6.7",
    "@truffle/core": "^5.6.6",
    "@truffle/interface-adapter": "^0.5.24",
    "ganache": "7.5.0",
    "mocha": "10.1.0",
    "original-require": "^1.0.1"
  },
  "devDependencies": {
    "@types/webpack": "~5.28.0",
    "app-module-path": "^2.2.0",
    "chai": "^4.2.0",
    "copy-webpack-plugin": "^11.0.0",
    "eslint": "^8.4.1",
    "fs-extra": "^9.1.0",
    "glob": "^7.1.6",
    "graphql-tag": "^2.12.6",
    "js-scrypt": "^0.2.0",
    "nyc": "^13.0.1",
    "semver": "7.3.7",
    "shebang-loader": "0.0.1",
    "stream-buffers": "^3.0.1",
    "tmp": "^0.2.1",
    "web3": "1.7.4",
    "webpack": "^5.73.0",
    "webpack-bundle-analyzer": "^4.6.1",
    "webpack-cli": "^4.10.0",
    "yargs": "^13.3.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "authors": [
    {
      "name": "Tim Coulter",
      "email": "tim@timothyjcoulter.com",
      "url": "https://github.com/tcoulter"
    }
  ],
  "namespace": "consensys"
}
