{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2016",
    "downlevelIteration": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "lib": ["es2019"],
    "rootDir": "lib",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "./lib/**/*.ts",
    "./typings/**/*.d.ts"
  ]
}
