{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "declaration": true,
    "target": "es2016",
    "downlevelIteration": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "lib": ["es2019", "dom"],
    "paths": {
      "@truffle/codec": ["./lib"],
      "@truffle/codec/*": ["./lib/*"]
    },
    "plugins": [
      { "transform": "typescript-transform-paths" },
      { "transform": "typescript-transform-paths", "afterDeclarations": true }
    ],
    "rootDir": ".",
    "types": ["node"]
  },
  "include": ["./lib/**/*.ts", "./typings/**/*.d.ts"]
}
