{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "declaration": true,
    "target": "es2018",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "lib": ["es2019"],
    "paths": {
    },
    "rootDir": ".",
    "types": [
      "jest",
      "node"
    ]
  },
  "include": [
    "./lib/**/*.ts",
    "./test/**/*.ts",
    "./typings/**/*.d.ts"
  ]
}
