{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "lib": ["es2017"],
    "paths": {
      "web3": ["../../node_modules/@types/web3/index", "node_modules/web3/index"]
    },
    "rootDir": "lib",
    "typeRoots": ["./typings", "./node_modules/@types", "../../node_modules/@types"],
  },
  "include": [
    "./lib/**/*.ts",
    "./typings/**/*.d.ts"
  ]
}
