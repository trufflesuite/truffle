{
  "name": "@truffle/browser-provider",
  "version": "0.1.0",
  "description": "Web3 provider that uses a browser-based web3 wallet for signing",
  "main": "dist/lib/index.js",
  "types": "dist/lib/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "prepare": "yarn build",
    "test": "jest --verbose",
    "test:manual:basic-provider": "ts-node ./manual-test/manual-test.ts",
    "test:manual:basic-rpc": "ts-node ./manual-test/manual-test-rpc.ts",
    "test:manual:metacoin-truffle": "pushd ./manual-test/metacoin-truffle && yarn && truffle migrate --network browser --reset; popd",
    "test:manual:metacoin-hardhat": "pushd ./manual-test/metacoin-hardhat && yarn && yarn deploy --network browser; popd",
    "test:manual:metacoin-hardhat-2": "pushd ./manual-test/metacoin-hardhat && yarn && yarn deploy-with-hardhat-deploy --reset --network browser; popd"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/trufflesuite/truffle.git",
    "directory": "packages/browser-provider"
  },
  "homepage": "https://github.com/trufflesuite/truffle/tree/master/packages/browser-provider#readme",
  "bugs": {
    "url": "https://github.com/trufflesuite/truffle/issues"
  },
  "author": "Rosco Kalis <roscokalis@gmail.com>",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@types/jest": "^26.0.0",
    "@types/node": "^14.0.13",
    "@types/promise-timeout": "^1.3.0",
    "@types/web3": "^1.0.20",
    "@types/ws": "^8.2.0",
    "ethereum-protocol": "^1.0.1",
    "ethers": "^5.4.5",
    "ganache-core": "^2.13.2",
    "jest": "^26.0.1",
    "ts-jest": "^26.1.0",
    "typescript": "^4.1.4",
    "web3": "^1.5.2"
  },
  "dependencies": {
    "@truffle/dashboard": "^0.1.0",
    "@truffle/dashboard-message-bus": "^0.1.0",
    "axios": "^0.21.1",
    "debug": "^4.3.2",
    "delay": "^5.0.0",
    "isomorphic-ws": "^4.0.1",
    "promise-timeout": "^1.3.0",
    "ws": "^8.2.0"
  },
  "browser": {
    "ws": false
  }
}
